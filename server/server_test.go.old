func GetImageFromServer(getname string, params string, refname string) (err error) {

	// Start the server
	port++
	server, _, ln := NewServer(port, 500000)
	srverr := make(chan error)
	go startServer(srverr, server, ln)
	defer stopServer(ln)
	time.Sleep(100 * time.Millisecond)

	_, body, err := fasthttp.Get(nil, fmt.Sprintf("http://localhost:%d/testimages/server/", port)+getname+params)
	if err != nil {
		return
	}

	// Get distortion compared to refrence image and check it is inside tolerance
	distortion, err := getDistortion(body, refname, "server/")
	if err != nil {
		return
	}
	if distortion > TOLERANCE {
		return errors.New(fmt.Sprintf("Bad image returned. Distortion: %v, Tolerance: %v", distortion, TOLERANCE))
	}

	// Check for server errors
	select {
	case err = <-srverr:
		return
	default:
	}

	return
}
